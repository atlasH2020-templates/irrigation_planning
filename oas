  "components": {
    "schemas": {
      "FieldURN": {
        "type": "string",
        "pattern": "^urn:[a-z][a-z0-9_.\\-]*:[\\w-.]+",
        "description": "Uniform resource name of a field with the syntax `urn:<service_id>:<internal_id>`. <service_id> must be the id of a valid and active ATLAS service"
      },
      "AdviceURN": {
        "type": "string",
        "pattern": "^urn:[a-z][a-z0-9_.\\-]*:[\\w-.]+",
        "description": "Uniform resource name of an advice with the syntax `urn:<service_id>:<internal_id>`. <service_id> must be the id of a valid and active ATLAS service"
      },
      "MonitoringRequest": {
        "type": "object",
        "properties": {
          "field_urn": {
            "$ref": "#/components/schemas/FieldURN"
          },
          "notification_url": {
            "type": "string",
            "format": "uri",
            "description": "Invoked with POST with a 'Recommendation' body (see components) when applicable"
          }
        },
        "required": [
          "field_urn"
        ],
        "example": {
          "field_urn": "urn:com.envrio-land.atlas.field_data:fdbe6f55-6179-4b88-9177-4afbed33adac"
        }
      },
      "MonitoringInfo": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "enum": [
              "IN_PROGRESS",
              "CONFIGURATION_REQUIRED",
              "READY",
              "FAILED"
            ],
            "description": "status of the advice preparation"
          },
          "status_message": {
            "type": "string",
            "description": "end-user-friendly message describing the status. In the special case where status is CONFIGURATION_REQUESTED, the message MUST be a browser URL to a configuration UI where further configuration can take place"
          },
          "recommendations": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Recommendation"
            }
          }
        },
        "required": [
          "status",
          "recommendations"
        ],
        "example": {
          "status": "READY",
          "recommendations": [
            {
              "application": "2021-07-31T10:00:00Z",
              "water": 10
            },
            {
              "application": "2021-07-31T18:00:00Z",
              "water": 10
            }
          ]
        }
      },
      "AdviceRequest": {
        "type": "object",
        "properties": {
          "field_urn": {
            "$ref": "#/components/schemas/FieldURN"
          },
          "application_date": {
            "type": "string",
            "format": "date"
          },
          "application_ratio": {
            "type": "integer",
            "description": "Percentage of the daily water requirements (default=100%). This can be used for when doing multiple irrigation applications within a day instead of all-at-once"
          }
        },
        "required": [
          "field_urn",
          "application_date",
          "application_ratio"
        ]
      },
      "Advice": {
        "type": "object",
        "properties": {
          "urn": {
            "$ref": "#/components/schemas/AdviceURN"
          },
          "type": {
            "type": "string",
            "pattern": "irrigation"
          },
          "field_urn": {
            "$ref": "#/components/schemas/FieldURN"
          },
          "application": {
            "type": "object",
            "items": {
              "$ref": "#/components/schemas/Application"
            }
          },
          "status": {
            "type": "string",
            "enum": [
              "IN_PROGRESS",
              "CONFIGURATION_REQUIRED",
              "READY",
              "FAILED"
            ],
            "description": "status of the advice"
          },
          "status_message": {
            "type": "string",
            "description": "end-user-friendly message describing the status. In the special case where status is CONFIGURATION_REQUESTED, the message MUST be a browser URL to a configuration UI where further configuration can take place"
          }
        },
        "required": [
          "urn",
          "type",
          "field_urn",
          "application",
          "status"
        ]
      },
      "Application": {
        "type": "object",
        "properties": {
          "application_ref": {
            "type": "string",
            "pattern": "^\\w+$"
          },
          "type": {
            "readOnly": true,
            "type": "string",
            "pattern": "irrigation"
          },
          "application_date-time": {
            "readOnly": true,
            "type": "string",
            "format": "date-time"
          },
          "water": {
            "readOnly": true,
            "type": "integer",
            "format": "int32"
          },
          "unit": {
            "type": "string",
            "enum": [
              "mm"
              ]
          }
        },
        "required": [
          "application_ref",
          "type",
          "application_date-time",
          "water",
          "unit"
        ]
      },
      "ApplicationDetails": {
        "type": "object",
        "properties": {
          "application_ref": {
            "type": "string",
            "pattern": "^\\w+$"
          },
          "type": {
            "type": "string",
            "pattern": "irrigation"
          },
          "application_map": {
            "type": "object",
            "properties": {
              "total_amount": {
                "type": "integer",
                "format": "int32"
              },
              "unit": {
                "type": "string",
                "enum": [
                  "m^3"
                  ]
              },
              "download_url": {
                "type": "string",
                "format": "uri",
                "description": "URL to download the GeoPackage application_map (with GET and service Bearer token). It is highly RECOMMENDED that Application maps should be requested just-in-time, just before starting the actual work on a field."
              },
              "url_expires_at": {
                "type": "string",
                "format": "date-time",
                "description": "date-time at which download URL expires"
              }
            },
            "required": [
              "total_amount",
              "unit",
              "download_url"
            ]
          }
        },
        "required": [
          "application_ref",
          "type",
          "application_map"
        ]
      },
      "Recommendation": {
        "type": "object",
        "properties": {
          "application": {
            "type": "string",
            "format": "date-time",
            "description": "Date-time that the application of water should performed"
          },
          "water": {
            "type": "integer",
            "format": "int32",
            "description": "The amount of water that should be applied (mm)"
          }
        },
        "required": [
          "application",
          "water"
        ],
        "example": {
          "application": "2021-07-31T10:00:00Z",
          "water": 10
        },
        "description": "Info about the date-time that the irrigation application should be performed and the corresponding amount of water that should be applied"
      },
      "SimpleError": {
        "type": "string",
        "description": "Plain text message (may be empty).",
        "example": "optional error message"
      },
      "DetailedError": {
        "type": "object",
        "description": "This defines the structure of an error payload when one is present. Actual messages and additional error information content may change from one implementation to another",
        "properties": {
          "message": {
            "type": "string",
            "description": "error description"
          },
          "errors": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Additional detailed information"
          }
        },
        "required": [
          "message"
        ],
        "example": {
          "message": "general error message",
          "errors": [
            "optional",
            "additional",
            "details"
          ]
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  }
}
